/* Grid */

@import '_grid.styl'

.{q}-grid-container
    clearfix()
    width _total-width(_columns = columns)
    margin auto

    for n in (1..columns)
        .{q}-row-{n}
            row(n)

    for n in (1..columns)
        .{q}-column-{n}
            column(n)

    for n in (1..columns)
        .{q}-push-{n}
            _push(n)

    for n in (1..columns)
        .{q}-pull-{n}
            _pull(n)

.{q}-row
    clearfix()

.{q}-margin-center
    margin-left auto
    margin-right auto

.{q}-float-l
    float left

.{q}-float-r
    float right

.{q}-txt-align-c
    text-align center

.{q}-txt-align-l
    text-align left

.{q}-txt-align-r
    text-align right

.{q}-inline-block
    display inline-block

.{q}-position-relative
    position relative

.{q}-content-wrapper
    width 100%
    padding 20px 0
    clearfix()

.{q}-clearfix
    clearfix()

for n in (0...10)
    .{q}-m-top-{n}
        margin-top 0em + n !important
    .{q}-m-bot-{n}
        margin-bottom 0em + n !important
for p in (1...9)
    .{q}-m-top-1p{p}
        margin-top 1em + (.1 * p) !important
    .{q}-m-top-p{p}
        margin-top 0em + (.1 * p) !important
    .{q}-m-bot-p{p}
        margin-bottom 0em + (.1 * p) !important
