.{q}-menu

    ul
        list-style none
        margin 0
        padding 0

    ul >li
        margin-top $bs-base-font-size

    a
        text-decoration none

    &.{q}-menu-horizontal
        overflow hidden
        clear both

        ul
            float left
        ul > li
            float left
            margin-left 20px
            margin-top 0

            &:first-child
                margin-left 0

